@inject JayElbourne.Views.Helpers.DateFormatHelper DateFormat
@inject JayElbourne.Views.Helpers.StringFormatHelper StringFormat

@model JayElbourneData.Models.Project

<article class="project-details">
    <h1>@StringFormat.TitleCase(Model.Title, false)</h1>
    <div class="details">
        <p>Posted: <span>@DateFormat.AsReadableDate(@Model.PostedOn)</span></p>
        <p>Status: <span>@Model.ProjectStatus</span></p>
    </div>
    <div class="content">
        @Model.Description
    </div>
</article>
<div id="project-tags-container"> 
    <a href=""><span class="badge badge-primary">Coding</span></a>
    <a href=""><span class="badge badge-primary">C#</span></a>
    <a href=""><span class="badge badge-primary">ASP.NET</span></a>
</div>

